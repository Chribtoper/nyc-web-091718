<h1> MAKE A NEW book! </h1>


<form action="/books" method="post">
  <input type="text" name="book[title]" placeholder=" Title">
  <input type="text" name="book[snippet]" placeholder=" Snippet here">
  <select name="book[author_id]">
    <% @authors.each do |author| %>
      <option value="<%= author.id %>"><%= author.name %></option>
    <% end %>
  </select>
  <input type="submit" value="SUBMIT THAT FORM! GOOD ANSWER!!">
</form>
