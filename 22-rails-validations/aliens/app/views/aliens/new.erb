<h1> DISCOVER ALIEN! </h1>



<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @alien do |f| %>
  <%=f.label :name %>
  <%=f.text_field :name %>
  <%=f.label :description %>
  <%=f.text_field :description %>
  <%=f.label :legs %>
  <%=f.number_field :legs %>
  <%=f.label :planet %>
  <%=f.text_field :planet %>
  <%=f.label :eats_humans %>
  <%=f.check_box :eats_humans %>
  <%= f.submit %>
<% end %>
